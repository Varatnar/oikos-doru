{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [
        0
      ]
    },
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore"
    ],
    "interface-name": false,
    "new-parens": true,
    "object-literal-sort-keys": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-console": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}